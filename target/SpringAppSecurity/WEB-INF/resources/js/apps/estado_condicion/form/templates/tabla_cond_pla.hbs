        left: 52%;
    }
    #table-cond-pla_info{
        float: left;
        margin-top: -12px;
        margin-left: 18px;
        font-size: 10px;
        color: rgb(2, 2, 2);
    }
    #table-cond-pla tr{
        cursor: pointer;
    }

