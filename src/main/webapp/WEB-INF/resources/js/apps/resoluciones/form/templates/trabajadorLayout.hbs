
<legend id="desc">Servidores Asociados a la Resolución <span id="desc-resolucion"></span> </legend>
<table id="table-trabajador" class="table  table-bordered table-hover" style="font-size: 12px;">
    <button type="button" id="mostrar_servi" href="#" class="btn btn-warning btn-small pull-right"><span class="glyphicon glyphicon-plus-sign"></span> Servidor</button>
    <thead class="header" style="color: #040404;background-color:#f5f5f5">
    <tr>
        <th>Nombre</th>
        <th>DNI</th>
        <th>Código Antiguo</th>
        <th>Estado</th>
        <th>Motivo</th>
        <th>Fecha Inicio</th>
        <th>Fecha Final</th>
        <th>Descripción</th>
        <th>Eliminar</th>
        <th>Motivo</th>


    </tr>
    </thead>
    <tbody class="body-table " id="tabla-trabajador">
    {{#each items}}
        <tr id="{{idTrabajadorResolucion}}" class="">
            <th>{{paterno}} {{materno}} {{nombre}}</th>
            <td >{{dni}}</td>
            <td>{{codAntiguo}}</td>
            <td>{{desc_est}}</td>
            <td>{{nombre_motivo}}</td>
            <td>{{fec_ini_mot}}</td>
            <td>{{fec_fin_mot}}</td>
            <td>{{desc_mot}}</td>
            <td><button type="button" id="AVModal" data-toggle="modal"  data-target="#serv-table-modal7"  href="#" class="btn btn-danger btn-xs" data1='{{codigo}}' data2='{{nroResol}}' data3='{{serEstado}}' data4='{{cod_motivo}}'><span  class="glyphicon glyphicon-trash"></span></button></td>

            <td><button type="button" id="agregar-motivo-trabajador" href="#" class="btn btn-warning btn-xs" data5={{codigo}} data6={{serEstado}}><span class="glyphicon glyphicon-plus-sign"></span></button></td>

    </tr>
    {{else}}
        <td colspan="9">No hay trabajadores</td>
    {{/each}}
    </tbody>
</table>

