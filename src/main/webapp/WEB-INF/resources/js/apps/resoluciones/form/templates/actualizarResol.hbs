<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Resoluciones</h4>
        </div>
          <div class="modal-body">
              <form class="form-horizontal">
                  <div class="row form-group" id="Primerla_fila_C">


                          <label class="col-md-5 control-label" for="busca-resol">Ingrese año de la resolución <span style="color:red;">*</span> </label>

                          <div class="col-md-4">



                              <div class="input-group">
                                  <input type="text" class="form-control" id="anio-resol-modal">
                        <span class="input-group-btn">

                                 <a id="buscarPorAnio-modal" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></a>
                            </span>

                              </div>
                          </div>


                  </div>

                  <table id="table-resol-modal" class="table table-bordered table-hover" style="font-size: 12px;display: none;">

                      <thead class="header" style="color: #040404;background-color:#f5f5f5">
                      <tr>
                          <th>Nro resolución</th>
                          <th>Fecha de Expedición</th>
                          <th>Descripción</th>
                          <th>Seleccionar</th>
                          <th>Eliminar</th>
                      </tr>
                      </thead>
                      <tbody class="body-table " id="actu-body">
                      {{#each items}}
                          <td >{{numero_resol}}</td>
                          <td>{{fecha_expedicion}}</td>
                          <td>{{obliga}}</td>
                          <td><button type="button" class="btn btn-success btn-xs" id="muestra-reso-modal"  data0='{{idResolucion}}'  data1='{{numero_resol}}' data2='{{cod_resol}}' data3='{{fecha_expedicion}}'  data4='{{motivo}}'
                                      data5='{{fecha_inicio}}'  data6='{{fecha_fin}}' data7='{{obliga}}' data8='{{adicional}}' data9='{{motivodesc}}'><span class="glyphicon glyphicon-ok"></span></button></td>
                          <td><button type="button" class="btn btn-danger btn-xs" data-dismiss="modal" data-toggle="modal" data-target="#serv-table-modal6" id="elimina-reso-modal" data1='{{numero_resol}}'><span  class="glyphicon glyphicon-trash"></span></button></td>
                          </tr>
                      {{else}}
                          <td colspan="6">No existen resoluciones</td>
                      {{/each}}
                      </tbody>
                  </table>
              </form>
          </div>
        <div class="modal-footer">

        </div>
    </div>
 </div>
<script type="text/javascript">
    $(function(){
        $("#serv-table-modal2>div").addClass("modal-dialog");
        $("#serv-table-modal2>div").addClass("modal-lg");
    });
</script>