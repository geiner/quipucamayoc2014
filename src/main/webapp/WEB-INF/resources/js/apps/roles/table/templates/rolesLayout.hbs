<link rel="text/javascript" href="/resources/js/lib/jquery.js">

<fieldset>
    <div class="tabbable tabs-left">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#lA" data-toggle="tab">Crear Perfil</a></li>
            <li class=""><a id="lb" href="#lB" data-toggle="tab">Asignar Roles</a></li>
        </ul>
        <div class="tab-content">

            <div class="tab-pane active" id="lA">
                <!--Crear Perfil-->
                <br>
                <div class="row form-group">
                   <div class="col-md-10">

                   </div>

                    <div class="col-md-2" >




                        <button id="add-perfil" class="btn btn-primary pull-right" type="submit">Agregar Perfil
                            <i class="icon-plus icon-white"></i>
                        </button>

                    </div>

                </div>

                <div id="perfiles">
                    <!--tabla de perfiles: crear-perfil.hbs-->
                </div>
                <div id="crear-perfil-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                <h4 class="modal-title" id="myModalLabel">Nuevo Perfil</h4>
                            </div>
                            <div class="modal-body">
                                <form class="form-horizontal">
                                    <div class="row form-group">
                                        <label class="col-md-4 control-label">Nombre de Perfil</label>
                                        <div class="col-md-7">
                                            <input type="text" id="descripcion" class="form-control">
                                        </div>

                                    </div>
                                </form>


                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal" data-toggle="modal">Cancelar</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal" id="save-perfil">Crear Perfil</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="modal-div" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                <h4 class="modal-title" id="myModalLabel">Eliminar Perfil</h4>
                            </div>
                            <div class="modal-body">
                                <p>
                                    <strong>El Perfil se eliminará<br>

                                        Si desea continuar haga click en aceptar. </strong>
                                </p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal" id="delete-perfil">Aceptar</button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="tab-pane" id="lB">
                <!--Asignar Roles-->

                <br>

                <form class="form-horizontal" id="form_tabla_soli" >
                    <div id="list-perfiles" class="row form-group">
                        <!--Lista de Perfiles-->
                    </div>


                    <div id="list-roles">
                        <!--Tabla con roles a asignar-->
                    </div>

                    <div id="footer-button">
                        <div style="width:64%">

                            <div id="msg2" class="alert alert-success"
                                 style="position:absolute; display:none; margin-top: -0.2%; left: 28%; right: auto; margin: 0 auto 20px; width:45%; text-align: left;">
                                Cambios guardados con éxito!
                            </div>
                        </div>

                        <div style="width:20%; float:right; margin-top:0%">
                            <a id="asign-roles" class="btn btn-primary" type="button"
                               style="float:right; margin-top:0%;">Guardar</a>
                        </div>

                    </div>


                </form>
            </div>

        </div>
    </div>
</fieldset>